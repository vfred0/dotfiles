#!/usr/bin/env bash

# BG_PATH="$HOME/Images"

path="$(readlink -f "$1")" &&
    case "$(file --mime-type -b "$path")" in
        image/* )
            # ln -sf "$path" "$BG_PATH" &&
            notify-send -i "$path" "Changing wallpaper... " || exit 1 ;;
        *)
            notify-send -i "system-error" "Error: not a valid file" && exit 1 ;;
    esac

xwallpaper --zoom "$path"
